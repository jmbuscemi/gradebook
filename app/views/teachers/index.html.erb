<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Email</th>
      <th>Parent Name</th>
      <th>Assignment Comments</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <% if student.parents.count == 1 %>
          <td><%= student.parents.first.name %></td>
        <% else %>
          <td><%= student.parents.first.name %> and <%= student.parents.last.name %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

